@model CCMovieDatabase.Models.Article

@{
    ViewData["Title"] = "Details";
}


<h1>@Model.Title</h1>
<p class="text-muted">Author: @Model.Author</p>
<p class="text-muted">Last Modified: @Model.ModifiedAt</p>
<hr />
@if (Model.ThumbnailUrl != "" || Model.ThumbnailUrl != null)
{
    <img src="@Model.ThumbnailUrl" alt="@Model.ThumbnailUrl" class="" />
}
<p>@Model.Body</p>
<hr />
<div>
    <a asp-action="Edit" asp-route-id="@Model?.ArticleId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
