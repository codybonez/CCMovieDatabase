@model IEnumerable<CCMovieDatabase.Models.Article>

@{
    ViewData["title"] = "Home";
}

<div class="d-flex justify-content-center m-5 p-5">
    <div id="carouselExample" class="carousel slide w-50">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="https://loremipsum.imgix.net/pkPsn4xvlsW7rV74rsMhW/9b749af2555183d91e84b9879422c180/placehold-1280x720.jpg?w=1920&q=60&auto=format,compress" class="d-block w-100" alt="https://loremipsum.imgix.net/pkPsn4xvlsW7rV74rsMhW/9b749af2555183d91e84b9879422c180/placehold-1280x720.jpg?w=1920&q=60&auto=format,compress">
            </div>
            <div class="carousel-item">
                <img src="https://loremipsum.imgix.net/pkPsn4xvlsW7rV74rsMhW/9b749af2555183d91e84b9879422c180/placehold-1280x720.jpg?w=1920&q=60&auto=format,compress" class="d-block w-100" alt="https://loremipsum.imgix.net/pkPsn4xvlsW7rV74rsMhW/9b749af2555183d91e84b9879422c180/placehold-1280x720.jpg?w=1920&q=60&auto=format,compress">
            </div>
            <div class="carousel-item">
                <img src="https://loremipsum.imgix.net/pkPsn4xvlsW7rV74rsMhW/9b749af2555183d91e84b9879422c180/placehold-1280x720.jpg?w=1920&q=60&auto=format,compress" class="d-block w-100" alt="https://loremipsum.imgix.net/pkPsn4xvlsW7rV74rsMhW/9b749af2555183d91e84b9879422c180/placehold-1280x720.jpg?w=1920&q=60&auto=format,compress">
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
</div>


<div class="row text-center g-4">
    <div class="col m-3 mt-5 mb-5">
        <a class="btn btn-primary btn-lg" asp-controller="Movie" asp-action="create">Add a Movie</a>
    </div>
</div>


<div class="row row-cols-1 row-cols-xs-2 row-cols-sm-3 row-cols-md-4 g-4">
    @foreach (var item in Model)
    {
        <div class="col">
            <div class="card">
                <img src="@item.ThumbnailUrl" class="card-img-top" alt="@item.ThumbnailUrl">
                <div class="card-body">
                    <h5 class="card-title">@item.Title</h5>
                    <p class="card-text">@item.ShortDescription</p>
                    <a class="btn btn-primary"
                        asp-controller="blog"
                        asp-action="details"
                        asp-route-id="@item.ArticleId"
                    >Read More</a>
                </div>
            </div>
        </div>
    }
</div>
